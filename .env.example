# Enterprise Profile Builder - Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project ID (found in project settings)
VITE_SUPABASE_PROJECT_ID=your_project_id_here

# Supabase anonymous public key (safe to expose in frontend)
# Find this in: Project Settings > API > anon/public key
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase API URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development | staging | production)
VITE_APP_ENV=development

# Application version (semantic versioning)
VITE_APP_VERSION=1.0.0

# Enable debug mode (true | false)
VITE_DEBUG_MODE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable Content Security Policy (true | false)
VITE_ENABLE_CSP=true

# Rate limiting - requests per minute
VITE_RATE_LIMIT_RPM=20

# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# Enable security headers (true | false)
VITE_ENABLE_SECURITY_HEADERS=true

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================
# Enable analytics tracking (true | false)
VITE_ENABLE_ANALYTICS=false

# Analytics provider ID (if using external analytics)
VITE_ANALYTICS_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable dark mode (true | false)
VITE_ENABLE_DARK_MODE=false

# Enable PDF export (true | false)
VITE_ENABLE_PDF_EXPORT=false

# Enable collaboration features (true | false)
VITE_ENABLE_COLLABORATION=false

# =============================================================================
# NOTES
# =============================================================================
# - All VITE_ prefixed variables are exposed to the frontend
# - Never include sensitive secrets (private keys, passwords)
# - Use Supabase Row Level Security (RLS) for data protection
# - Review SECURITY.md for best practices
